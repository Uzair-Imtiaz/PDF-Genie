<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/receive_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/request_box"
        android:backgroundTint="@color/white"
        android:padding="14dp"
        android:text="Request"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:visibility="visible"
        android:id="@+id/request_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:background="@drawable/receive_box"
        android:backgroundTint="#183D3D"
        android:padding="14dp"
        android:text="Hello, how can i help you"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


</RelativeLayout>