<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDF Genie"
        android:textColor="#FFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="150dp" />


    <TextView
        android:id="@+id/app_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:text="AI ASSISTANT IN YOUR POCKET"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="90dp"/>


    <TextView
        android:id="@+id/powered_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_description"
        android:background="@drawable/cyan_gradient_rounded"
        android:padding="10dp"
        android:text="Powered by llama-2"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="90dp"/>

    <Button
        android:id="@+id/continue_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#183D3D"
        android:text="Continue"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="110dp" />

    <TextView
        android:id="@+id/terms_of_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/continue_button"
        android:text="By proceeding, you accept our Terms of Use and Privacy Policy"
        android:textColor="#9E9E9E"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>
